<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 pz-sm-0 mx-auto">
      <h1>User info</h1>
      <%= form_with model:@user, local:true do |f| %>
        <label for="inputName">Name</label>
        <%= f.text_field :name, autofocus: true, id:"inputName", palaceholder:"名前", class:'form-control' %>

        <label for="inputImage">Image</label><br>
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>

        <label for="inputIntroduction">Introducution</label>
        <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", palaceholder:"自己紹介", class:'form-control  mb-3' %>

        <%= f.submit "Update User", class:'btn btn-secondary mb-3' %>

        <% end %>


    </div>
  </div>
</div>